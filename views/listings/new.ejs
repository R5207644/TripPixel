<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row mb-3">
      <div class="col-8 offset-2">
        <h2 class="mb-3 text-center">Create new listing</h2>
        <form action="/listings" method="post">

          <div class="form-group mb-3">
            <label for="listing[title]" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" required placeholder="Enter title">
          </div>

          <div class="form-group mb-3">
            <label for="listing[description]" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required placeholder="Description"></textarea>
          </div>

          <div class="form-group mb-3">
            <label for="listing[image]" class="form-label">Image</label>
            <input type="text" name="listing[image]" class="form-control" placeholder="Insert image URL/Link">
          </div>

          <div class="form-group mb-3 row">

            <div class="col-md-8">
              <label for="listing[location]" class="form-label">Location</label>
              <input type="text" name="listing[location]" class="form-control" required
                placeholder="ex. Varanasi, delhi, USA">
            </div>

            <div class="col-md-4">
              <label for="listing[country]" class="form-label">Country</label>
              <input type="text" name="listing[country]" class="form-control" required placeholder="India, USA etc...">
            </div>
          </div>

          <div class="form-group mb-3">
            <label for="listing[price]" class="form-label">Price</label>
            <input type="number" name="listing[price]" class="form-control" required placeholder="per night stay price">
          </div>

          <div class="form-group mb-3 text-center">
            <input type="submit" class="btn submit-btn" value="submit">
          </div>

        </form>

      </div>
    </div>
  </body>