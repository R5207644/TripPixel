<% layout("/layouts/boilerplate") %>

  <body>

    <div class="row mt-3">
      <div class="col-8 offset-2">

        <div class="card">
          <img src="<%= listing.image %>" alt="listing-img" class="card-img-top show-img mb-2">

          <div class="card-body">
            <h6 class="card-title">
              <%= listing.title %>
            </h6>
            <p class="card-text">
                <%= listing.description %><br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                <%= listing.location %><br>
                <%= listing.country %>
            </p>
          </div>
        </div>

        <div class="row text-center mb-3 mt-3">
          <div class="col-4"><a href="/listings/<%= listing._id %>/edit" class="btn btn-primary submit-btn">Edit</a></div>
          <form method="post" action="/listings/<%= listing._id %>?_method=delete" class="col-4"><button class="btn btn-dark">delete</button></form>
        </div>
      </div>
    </div>
  </body>